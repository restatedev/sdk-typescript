{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {},
    "format": {},
    "format-check": {},
    "verify": {
      "dependsOn": ["format-check", "lint", "test", "build"]
    }
  }
}
